@using Gabriel.Cat.Blazor.Client.Controles.Inputs
@typeparam T
<Microsoft.AspNetCore.Components.Forms.EditForm Model="Data"  style="display:inline" >
<Microsoft.AspNetCore.Components.Forms.InputNumber @bind-Value="Data.Data"  style="display:inline" />


</Microsoft.AspNetCore.Components.Forms.EditForm>

@code {
    [Parameter] public EventCallback OnChange { get; set; }
    [Parameter] public T InitValue { get; set; }
    InputData<T> Data { get; set; }

    protected override async Task OnInitializedAsync()
    {
        Data = new InputData<T>();
        Data.Data = InitValue;
        Data.PropertyChanged += async (s, e) => await OnChange.InvokeAsync(Data.Data);
        await base.OnInitializedAsync();
    }

}