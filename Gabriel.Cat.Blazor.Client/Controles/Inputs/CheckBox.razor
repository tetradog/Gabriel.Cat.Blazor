@using Gabriel.Cat.Blazor.Client.Controles.Inputs

    <Microsoft.AspNetCore.Components.Forms.EditForm Model="Data"  style="display:inline" >
        <Microsoft.AspNetCore.Components.Forms.InputCheckbox @bind-Value="Data.Data"  style="display:inline" />
    </Microsoft.AspNetCore.Components.Forms.EditForm>

@code {
    [Parameter] public EventCallback<bool> OnChange { get; set; }
    [Parameter] public bool InitValue { get; set; }
    InputData<bool> Data { get; set; }
    protected override async Task OnInitializedAsync()
    {
        Data = new InputData<bool>();
        Data.Data = InitValue;
        Data.PropertyChanged += async (s, e) => await OnChange.InvokeAsync(Data.Data);
        await base.OnInitializedAsync();
    }
    public void Set(bool data) => Data.Data = data;
}