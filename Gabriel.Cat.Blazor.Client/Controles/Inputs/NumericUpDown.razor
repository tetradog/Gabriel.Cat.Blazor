
@typeparam T
<EditForm Model="Data"  style="display:inline" >
    <InputNumber @bind-Value="Data.Data"  style="display:inline" />
</EditForm>

@code {
    [Parameter] public EventCallback OnChange { get; set; }
    [Parameter] public T InitValue { get; set; }
    InputData<T> Data { get; set; }

    protected override async Task OnInitializedAsync()
    {
        Data = new InputData<T>();
        Data.Data = InitValue;
        Data.PropertyChanged += async (s, e) => await OnChange.InvokeAsync(Data.Data);
        await base.OnInitializedAsync();
    }

}