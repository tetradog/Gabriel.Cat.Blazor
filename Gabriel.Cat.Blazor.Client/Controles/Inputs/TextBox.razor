@inherits InputBase<string>
     
    <Microsoft.AspNetCore.Components.Forms.EditForm Model="@this">
        @if (!MultiLine)
        {
            <InputText @bind-Value="Value" style="display:inline"  @oninput="OnValueChanged"  />
        }
        else
        {
            <InputTextArea @bind-Value="Value" style="display:inline"  @oninput="OnValueChanged" />
        }
    </Microsoft.AspNetCore.Components.Forms.EditForm>


@code {

    [Parameter] public bool MultiLine { get; set; }

}
