
@if (Parent.ActivePage == this)
{
    @ChildContent
}

@code {
        //source:https://blazor-university.com/templating-components-with-renderfragements/creating-a-tabcontrol/

        [CascadingParameter(Name="Parent") ]  TabControl Parent { get; set; }
    [Parameter] public RenderFragment ChildContent { get; set; }
    [Parameter] public string Text { get; set; }
    protected override void OnInitialized()
    {
        if (Parent == null)
            throw new ArgumentNullException(nameof(Parent), "TabItem must exist within a TabControl");

        base.OnInitialized();
    }
}